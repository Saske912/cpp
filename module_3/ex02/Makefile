NAME=borderland
FLAGS=-Wall -Wextra -Werror
CC=clang++
FILES=FragTrap.cpp main.cpp ScavTrap.cpp ClapTrap.cpp

$(NAME): FragTrap.h ScavTrap.hpp ClapTrap.hpp
	$(CC) -g $(FLAGS) $(FILES) -o $(NAME)

all: $(NAME)

clean:
	rm -f $(NAME)
	rm -rf $(NAME).dSYM

re: clean all

run: $(NAME)
	./$(NAME)

valgrind: $(NAME)
	valgrind --leak-check=full ./$(NAME)