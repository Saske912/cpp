##################################################################

NAME=sorcerer
FLAGS=-Wall -Wextra -Werror
CC=clang++
FILES=Sorcerer.cpp main.cpp Victim.cpp Peon.cpp Hawk.cpp Gost.cpp

$(NAME): Sorcerer.hpp Victim.hpp Peon.hpp Hawk.hpp Gost.hpp
	$(CC) -g $(FLAGS) $(FILES) -o $(NAME)

all: $(NAME)

clean:
	rm -f $(NAME)
	rm -rf $(NAME).dSYM

re: clean all

run: re
	./$(NAME)

valgrind: $(NAME)
	valgrind --leak-check=full ./$(NAME)